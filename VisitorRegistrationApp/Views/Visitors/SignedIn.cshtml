@model IEnumerable<VisitorViewModel>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}


<h1>All Visitors</h1>


@if (Model == null)
{
    <h1>No Visitors have been signed in yet</h1>

}
else
{

    <table class="table">
        <thead>
            <tr>
                <th>Status</th>
                <th>
                    Name
                </th>
                <th>Visiting Company</th>
                <th>Check In</th>

                <th>To Meet</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.VisitStatus.ToString() </td>
                    <td>
                        @item.Fullname
                    </td>
                    <td>@item.VisitingCompany?.Name</td>
                    <td>@item.CheckIn.ToString(@"hh\:mm") </td>
                    <td>@item.Host.Name </td>
                </tr>
            }
        </tbody>
    </table>


}
