@model IEnumerable<VisitorViewModel>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{

    // Sort By
}



<h1>All Visitors</h1>



@if (Model.Any() == false)
{
    <h1>No visitors have been signed out</h1>
}
else
{

   
    <table class="table">
        <thead>
            <tr>
                <th>Status</th>
                <th>
                    Name
                </th>
                <th>Visiting Company</th>
                <th>Check out Time</th>
                <th>To Meet</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.VisitStatus.ToString() </td>
                    <td>
                        @item.Fullname
                    </td>
                    <td>@item.VisitingCompany.Name</td>
                    <td>@item.CheckOut </td>
                    <td>>@item.Host.Name </td>
                   
                </tr>
            }
        </tbody>
    </table>
}
