@{
}
<h1>All Visitors</h1>


<form method="post" asp-action="Search">
    <div class="form-group">
        <div class="input-group">
            <input type="search" name="searchTerm" class="form-control" value="" />
            <span class="input-group-btn">
                <button class="btn btn-lg">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
            </span>
        </div>
    </div>
</form>


<table class="table">
    <thead>
        <tr>
            <th>
                
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Fullname
                </td>
                <td>
                    <a class="btn btn-sm" asp-action="Edit" asp-route-name="@item.Fullname"><i class="glyphicon glyphicon-edit"></i></a>
                    <a class="btn btn-sm" asp-action="Details" asp-route-name="@item.Fullname"><i class="glyphicon glyphicon-zoom-in"></i></a>
                    <a class="btn btn-sm" asp-action="Delete" asp-route-name="@item.Fullname"><i class="glyphicon glyphicon-trash"></i></a>
                    <a class="btn btn-sm" asp-controller="Employees" asp-action="Index" asp-route-name="@item.Fullname"><i class="glyphicon glyphicon-user"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>

