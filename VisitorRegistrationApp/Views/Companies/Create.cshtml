@model VisitorRegistrationApp.Models.CompanyViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>New Company </h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CompanyPhoto"></label>
                <input asp-for="CompanyPhoto" class="form-control" />
                <span class="text-danger" asp-validation-for="CompanyPhoto"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" style="margin-top:20px;" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-link" style="text-decoration:none;margin-top:20px;" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
