@model VisitorRegistrationApp.Models.CompanyViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<div class="alert alert-danger">
    <h3>Are you sure you want @Model.Name to be deleted?</h3>
    <h4>Don't forget that the employees of @Model.Name also will be deleted </h4>
</div>


<div>   
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a class="btn btn-link" style="text-decoration:none" asp-action="Index">Back to List</a>
    </form>
</div>
