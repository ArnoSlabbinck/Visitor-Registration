@model IEnumerable<SignOutVisitorViewModel>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    int counter = 0;
}

<a class="btn btn-info" asp-controller="Home" asp-action="Service"><i class="glyphicon glyphicon-arrow-left"></i>Back</a>

<h1>Please Select Person To Sign Out</h1>



<form method="post" asp-action="Search" asp-route-logout="logout">
    <div class="form-group">
        <div class="input-group">
            <input type="search" name="searchInput" class="form-control" value="" />
            <input type="text" name="logOut" value="logout" disabled="disabled" style="display:none;" />
            <span class="input-group-btn">
                <button class="btn btn-lg">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
            </span>
        </div>
    </div>
</form>



@if (Model?.Any() ?? false)
{

    <table class="table table-hover align-middle">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Firstname</th>
                <th scope="col">LastName</th>
                <th scope="col"></th>
            </tr>
        </thead>

        @foreach (var person in Model)
        {

            @if (person != null)
            {

                <tbody>
                    <tr>
                        <th scope="row">1</th>
                        <td>@person.FirstName</td>
                        <td>@person.LastName</td>
                        <td>
                            <a asp-controller="Home" asp-action="ConfirmSignOut" asp-route-name="@person.Fullname" class="btn btn-primary">Sign Out</a>
                        </td>
                    </tr>
                </tbody>


                counter++;
            }
        }
    </table>
}





