@model IEnumerable<VisitorRegistrationApp.Models.EmployeeViewModel>

@{
    ViewData["Title"] = "Index";
    
}

@if (Model == null)
{
    <h1>This Company doesn't have employees yet. You need to add one </h1>
    <p>
        <a class="btn btn-primary" asp-action="Create" asp-route-id="@ViewBag.Index">Add New</a>
    </p>
}
else
{
    <h1>Employees from @Model.ToList()[0].Company.Name</h1>

    <p>
        <a class="btn btn-primary" asp-action="Create" asp-route-id="@Model.ToList()[0].Company.Id">Add New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BirthDay)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Job)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Salary)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AtWorkStatus)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Company)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BirthDay)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Job)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Salary)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AtWorkStatus)
                    </td>

                    <td>
                        <a class="btn btn-sm" asp-action="Edit" asp-route-Id="@item.Id"><i class="glyphicon glyphicon-edit"></i></a>
                        <a class="btn btn-sm" asp-action="Details" asp-route-Id="@item.Id"><i class="glyphicon glyphicon-zoom-in"></i></a>
                        <a class="btn btn-sm" asp-action="Delete" asp-route-Id="@item.Id"><i class="glyphicon glyphicon-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>


}

